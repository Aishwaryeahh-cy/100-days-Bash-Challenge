while true
do
    read -p "Enter something (type 'stop' to exit): " input
    if [ "$input" = "stop" ]; then
        echo "Stopping loop."
        break
    fi
    echo "You entered: $input"
done

##!/bin/bash
while true
do
    echo "Press Ctrl+C to stop this loop."
    sleep 2
done

